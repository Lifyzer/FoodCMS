{% extends "layouts/base.twig" %}

{% block content %}
    {% for item in items %}
        <div class="col s8">
            <div class="row">
                <h1 class="underline">
                    <a href="{{ url('product' ~ item.id) }}">
                        {{ item.product_name }}
                    </a>
                </h1>
                <p>
                    <em>{{ item.ingredients }}</em>
                </p>
                <hr />
            </div>
        </div>
    {% endfor %}

    <div class="col s4">
        <div class="row">
            <h1>Refine your search ðŸ˜‹</h1>
            {%  include 'partials/search-form.twig' %}
        </div>
    </div>
{% endblock %}

{% extends "layouts/base.twig" %}

{% block content %}
    <div class="row">
        <section class="col s12 m8">
            <header>
                <h2>{{ item.product_name }}</h2>
            </header>

            <article>
                <dl class="center">
                    {% if item.ingredients %}
                        <dt>üåÆ Ingredients</dt>
                        <dd>{{ item.ingredients }}</dd>
                    {% endif %}

                    {% if item.salt %}
                        <dt>üßÇ Salt</dt>
                        <dd>{{ item.salt }}gr</dd>
                    {% endif %}

                    {% if item.sugar %}
                        <dt>üç™ Sugar</dt>
                        <dd>{{ item.sugar }}</dd>
                    {% endif %}

                    {% if item.protein %}
                        <dt>ü•ö Protein</dt>
                        <dd>{{ item.protein }}</dd>
                    {% endif %}

                    {% if item.carbohydrate %}
                        <dt>ü•õ Carbohydrate</dt>
                        <dd>{{ item.carbohydrate }}</dd>
                    {% endif %}

                    {% if item.dietary_fiber %}
                        <dt>Fiber</dt>
                        <dd>{{ item.dietary_fiber }}</dd>
                    {% endif %}

                    {% if item.sodium %}
                        <dt>Sodium</dt>
                        <dd>{{ item.sodium }}</dd>
                    {% endif %}

                    {% if item.alcohol %}
                        <dt>üç∏ Alcohol</dt>
                        <dd>{{ item.alcohol }}</dd>
                    {% endif %}
                </dl>
            </article>
        </section>

        <section class="col s12 m4">
            <p>
                {% if item.product_image %}
                    {% set productImage, productAlt = item.product_image, item.product_name %}
                {% else %}
                    {% set productImage, productAlt = itemPlaceholder, 'Item image not found' %}
                {% endif %}
                <img
                    src="{{ productImage }}"
                    alt="{{ productAlt }}"
                    title="{{ productAlt }}"
                />
            </p>

            <p class="bold">Share with your Friends' Circle!</p>
            <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                <a class="a2a_dd" href="https://www.addtoany.com/share" rel="nofollow"></a>
                <a class="a2a_button_facebook"></a>
                <a class="a2a_button_twitter"></a>
                <a class="a2a_button_facebook_messenger"></a>
                <a class="a2a_button_whatsapp"></a>
            </div>
        </section>
    </div>

    {% include 'partials/disqus.twig' %}
{% endblock %}

{% block javascript %}
    <script src="{{ url('mode_modules/chart.js/dist/Chart.js') }}"></script>
{% endblock %}

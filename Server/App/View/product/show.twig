{% extends "layouts/base.twig" %}

{% block content %}
    <div class="row">
        <div class="col s8">
           <h1>{{ item.product_name }}</h1>

            <!-- Chart.js -->
            <dl class="center">
                {% if item.ingredients %}
                    <dt>Ingredients 🌮</dt>
                    <dd>{{ item.ingredients }}</dd>
                {% endif %}

                {% if item.salt %}
                    <dt>Salt 🧂</dt>
                    <dd>{{ item.salt }}gr</dd>
                {% endif %}

                {% if item.sugar %}
                    <dt>Sugar 🍪</dt>
                    <dd>{{ item.sugar }}</dd>
                {% endif %}

                {% if item.protein %}
                    <dt>Protein 🥚</dt>
                    <dd>{{ item.protein }}</dd>
                {% endif %}

                {% if item.carbohydrate %}
                    <dt>Carbohydrate 🥛</dt>
                    <dd>{{ item.carbohydrate }}</dd>
                {% endif %}

                {% if item.dietary_fiber %}
                    <dt>Fiber</dt>
                    <dd>{{ item.dietary_fiber }}</dd>
                {% endif %}

                {% if item.sodium %}
                    <dt>Sodium</dt>
                    <dd>{{ item.sodium }}</dd>
                {% endif %}

                {% if item.alcohol %}
                    <dt>Alcohol 🍸</dt>
                    <dd>{{ item.alcohol }}</dd>
                {% endif %}
            </dl>
        </div>

        <div class="col s4">
            <p>
                {% if item.product_image %}
                    {% set product_image = item.product_image %}
                {% else %}
                    {% set product_image = itemPlaceholder %}
                {% endif %}

                <img src="{{ product_image }}" alt="{{ item.product_name }}" />
            </p>

            <p>Share with your Friends' Circle!</p>
            <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                <a class="a2a_dd" href="https://www.addtoany.com/share" rel="nofollow"></a>
                <a class="a2a_button_facebook"></a>
                <a class="a2a_button_twitter"></a>
                <a class="a2a_button_facebook_messenger"></a>
                <a class="a2a_button_whatsapp"></a>
            </div>
        </div>
    </div>

    {% include 'partials/disqus.twig' %}
{% endblock %}

{% block javascript %}
    <script src="{{ url('mode_modules/chart.js/dist/Chart.js') }}"></script>
{% endblock %}
